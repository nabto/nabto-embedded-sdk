{
    "version": 6,
    "configurePresets": [
        {
            "name": "debug",
            "generator": "Ninja",
            "binaryDir": "build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "release",
            "generator": "Ninja",
            "binaryDir": "build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "vcpkg_base",
            "toolchainFile": "3rdparty/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "cacheVariables": {
                "NABTO_DEVICE_PREFER_SYSTEM_LIBS": "ON"
            }
        },
        {
            "name": "linux_vcpkg",
            "inherits": "vcpkg_base",
            "generator": "Ninja",
            "binaryDir": "build/linux_vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "debug_vcpkg",
            "inherits": "vcpkg_base",
            "generator": "Ninja",
            "binaryDir": "build/debug_vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "mac_vcpkg_x86_64",
            "inherits": "vcpkg_base",
            "generator": "Ninja",
            "binaryDir": "build/mac_vcpkg_x86_64",
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "x86_64",
                "VCPKG_TARGET_TRIPLET": "x64-osx",
                "CMAKE_BUILD_TYPE": "Release",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "mac_vcpkg_arm64",
            "inherits": "vcpkg_base",
            "generator": "Ninja",
            "binaryDir": "build/mac_vcpkg_arm64",
            "cacheVariables": {
                "CMAKE_OSX_ARCHITECTURES": "arm64",
                "VCPKG_TARGET_TRIPLET": "arm64",
                "CMAKE_BUILD_TYPE": "Release",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "mac_fetchcontent_universal",
            "generator": "Ninja",
            "binaryDir": "build/mac_fetchcontent_universal",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "linux_fetchcontent",
            "generator": "Ninja",
            "binaryDir": "build/linux_fetchcontent",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "windows_vcpkg",
            "inherits": "vcpkg_base",
            "binaryDir": "build/windows_vcpkg",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "DEVICE_BUILD_TESTS": "ON"
            }
        },
        {
            "name": "test_ansi_c99",
            "environment": {
                "CFLAGS": "-ansi -std=gnu99"
            },
            "binaryDir": "build/test_ansi_c99"
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "configurePreset": "release"
        },
        {
            "name": "linux_vcpkg",
            "configurePreset": "linux_vcpkg"
        },
        {
            "name": "debug_vcpkg",
            "configurePreset": "debug_vcpkg"
        },
        {
            "name": "mac_vcpkg_x86_64",
            "configurePreset": "mac_vcpkg_x86_64"
        },
        {
            "name": "mac_vcpkg_arm64",
            "configurePreset": "mac_vcpkg_arm64"
        },
        {
            "name": "mac_fetchcontent_universal",
            "configurePreset": "mac_fetchcontent_universal"
        },
        {
            "name": "linux_fetchcontent",
            "configurePreset": "linux_fetchcontent"
        },
        {
            "name": "windows_vcpkg",
            "configurePreset": "windows_vcpkg"
        },
        {
            "name": "test_ansi_c99",
            "configurePreset": "test_ansi_c99"
        }
    ],
    "workflowPresets": [
        {
            "name": "test_ansi_c99",
            "description": "Test that the software can be built in ansi c99 mode",
            "steps": [
                 {
                    "type": "configure",
                    "name": "test_ansi_c99"
                 },
                 {
                    "type": "build",
                    "name": "test_ansi_c99"
                 }
            ]
        },
